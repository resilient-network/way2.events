// Once approved, update attribution.name/role/org per quote.
const testimonials = [
  {
    quote: 'Safety is our biggest concern',
    featured: true,
    attribution: {
      name: 'Beta program organizer',
      role: null,
      org: null
    }
  },
  {
    quote: "We've been looking for a platform that does this",
    featured: false,
    attribution: {
