<script>
  type NetworkTransitionRuntime = {
    cleanupFns: Array<() => void>;
  };

  const runtimeKey = '__way2NetworkTransitionRuntime__';
  const runtimeHost = window as Window & {
    [runtimeKey]?: NetworkTransitionRuntime;
  };
  const transitionRuntime =
    runtimeHost[runtimeKey] ??
    (runtimeHost[runtimeKey] = {
      cleanupFns: [],
    });

  const clamp = (value: number, min = 0, max = 1) => Math.min(Math.max(value, min), max);

  function cleanupNetworkTransition() {
    transitionRuntime.cleanupFns.forEach((cleanup) => cleanup());
    transitionRuntime.cleanupFns = [];
  }

  function initNetworkTransition() {
    cleanupNetworkTransition();

    const sections = document.querySelectorAll<HTMLElement>('[data-network-transition]');
    if (!sections.length) return;

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    sections.forEach((section) => {
      const fragileText = section.querySelector<HTMLElement>('[data-network-fragile]');
      const stableText = section.querySelector<HTMLElement>('[data-network-stable]');
      const highlight = section.querySelector<HTMLElement>('[data-network-highlight]');
      const pill = section.querySelector<HTMLElement>('[data-network-pill]');
      const pillText = section.querySelector<HTMLElement>('[data-network-pill-text]');

      if (!(fragileText && stableText && highlight && pill && pillText)) return;

      const setProgress = (progress: number) => {
        const p = clamp(progress);
        const fragileIntro = clamp(p / 0.16);
        const fragileExit = clamp((p - 0.62) / 0.2);
        const fragileOpacity = fragileIntro * (1 - fragileExit);
        const stablePhase = clamp((p - 0.74) / 0.2);
        const highlightPhase = clamp((p - 0.84) / 0.12);

        const fragileTranslate = (1 - fragileIntro) * 18 - fragileExit * 30;
        const fragileScale = 0.975 + fragileIntro * 0.025 + fragileExit * 0.05;
        const fragileBlur = (1 - fragileIntro) * 8 + fragileExit * 9;

        fragileText.style.opacity = fragileOpacity.toFixed(3);
        fragileText.style.transform = `translate3d(0, ${fragileTranslate.toFixed(2)}px, 0) scale(${fragileScale.toFixed(3)})`;
        fragileText.style.filter = `blur(${fragileBlur.toFixed(2)}px)`;

        stableText.style.opacity = stablePhase.toFixed(3);
        stableText.style.transform = `translate3d(0, ${(32 - stablePhase * 32).toFixed(2)}px, 0)`;
        stableText.style.filter = `blur(${((1 - stablePhase) * 8).toFixed(2)}px)`;

        highlight.style.setProperty('--highlight-scale', highlightPhase.toFixed(3));

        const isStable = p > 0.78;
        pill.classList.toggle('stable', isStable);
        pill.classList.toggle('fragile', !isStable);
        pillText.textContent = isStable ? 'Way2 protected - stable' : 'Network load: critical';
      };

      if (prefersReducedMotion) {
        setProgress(1);
        return;
      }

      let frameId = 0;
      const update = () => {
        frameId = 0;
        const rect = section.getBoundingClientRect();
        const maxScroll = section.offsetHeight - window.innerHeight;
        const progress = maxScroll > 0 ? clamp(-rect.top / maxScroll) : 0;
        setProgress(progress);
      };

      const queueUpdate = () => {
        if (frameId) return;
        frameId = window.requestAnimationFrame(update);
      };

      window.addEventListener('scroll', queueUpdate, { passive: true });
      window.addEventListener('resize', queueUpdate);

      transitionRuntime.cleanupFns.push(() => {
        window.removeEventListener('scroll', queueUpdate);
        window.removeEventListener('resize', queueUpdate);
        if (frameId) {
          window.cancelAnimationFrame(frameId);
        }
      });

      update();
    });
  }

  initNetworkTransition();
  document.addEventListener('astro:page-load', initNetworkTransition);
  document.addEventListener('astro:before-swap', cleanupNetworkTransition);
</script>

