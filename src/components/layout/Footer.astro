---
import Button from '@/components/ui/Button.astro'
import { themeConfig } from '@/config'
const today = new Date()
---

<footer class="footer card-depth">
  <canvas class="background-shader footer-shader" aria-label="Animated footer background"></canvas>
  <h2 class="loud-text heading-2xl">
    Ready to never lose your friends again? 
  </h2>
  <div class="footer-inner">
    <img src="/brand/logoshape.svg" width="280" height="280" alt="Way2" class="footer-symbol" />

    <div class="footer-cta">
      <div class="cta-group">
        <span class="cta-eyebrow">For those who go to festivals</span>
        <Button
          href="https://docs.google.com/forms/d/e/1FAIpQLSduCM6cOmQd2xNFpeqKcyyYNI8efWHrgY4u1Rdln4XoYUSQsw/viewform?usp=header"
          label="Join our beta"
          variant="primary"
          icon="â–¶"
          ariaLabel="Join the Way2 beta"
        />
      </div>
      <div class="cta-group">
        <span class="cta-eyebrow">For those who organize them</span>
        <Button href="/partner-up" label="Connect your event" variant="secondary" />
      </div>
    </div>
  </div>
</footer>
<span class="meta-text">
  &copy; {today.getFullYear()} {themeConfig.site.author}. All rights reserved.
</span>
<style>
  .footer {
    margin-top: 64px;
    position: relative;
    border-radius: 16px;
    background: var(--colors-indigo-40);
    overflow: hidden;
    border: 1px solid var(--colors-indigo-0);
    padding-top: 40px;
    padding-bottom: 40px;

    .loud-text {
      position: relative;
      z-index: 1000;
      color: var(--colors-ink-100);
      max-width: var(--content-width);
      margin-left: auto;
      margin-right: auto;
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }

  .footer-shader {
    position: absolute;
    inset: -28% -15% 0;
    z-index: 0;
    pointer-events: none;
    opacity: 0.65;
  }

  .footer-inner {
    position: relative;
    z-index: 1;
    display: flex;
    gap: 2rem;
    padding: 2rem;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .footer-symbol {
    width: 280px;
    height: auto;
  }

  .footer-cta {
    display: flex;
    flex-direction: column;
    max-width: 320px;
    gap: 24px;
  }

  .cta-group {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 8px;

    .button {
      width: 100%;
    }
  }

  .cta-eyebrow {
    color: var(--colors-ink-90);
    font-size: var(--font-size-m);
    font-weight: 600;
    text-align: center;
  }

  .meta-text {
    display: flex;
    justify-content: center;
    margin-top: 1rem;
    color: var(--colors-ink-20);
    font-size: var(--font-size-xs);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

</style>
