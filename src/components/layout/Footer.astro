---
import Button from '@/components/ui/Button.astro'
import { themeConfig } from '@/config'
const today = new Date()
---

<footer class="footer-section">
  <div class="footer-grid">
    
    <div class="footer-headline-wrapper">
      <h2 class="heading-display footer-headline">
        Ready to never lose your friends again?
      </h2>
    </div>

    <div class="footer-actions">
      <div class="cta-group">
        <span class="label-mono">For Attendees</span>
        <Button
          href="https://docs.google.com/forms/d/e/1FAIpQLSduCM6cOmQd2xNFpeqKcyyYNI8efWHrgY4u1Rdln4XoYUSQsw/viewform?usp=header"
          label="Join our beta"
          variant="primary"
          icon="â–¶"
          ariaLabel="Join the Way2 beta"
        />
      </div>
      <div class="cta-group">
        <span class="label-mono">For Organizers</span>
        <Button href="/partner-up" label="Connect your event" variant="secondary" />
      </div>
    </div>

    <div class="footer-meta">
      <img src="/brand/logoshape.svg" width="64" height="64" alt="Way2" class="footer-symbol" />
      <span class="copyright">
        &copy; {today.getFullYear()} {themeConfig.site.author}. All rights reserved.
      </span>
    </div>

  </div>
</footer>

<style>
  .footer-section {
    position: relative;
    padding: 4rem;
    margin-top: 4rem;
    overflow: hidden;
  }

  .footer-headline-wrapper {
    grid-column: 1 / -1;
    margin-bottom: 4rem;
  }

  @media (min-width: 768px) {
    .footer-headline-wrapper {
      grid-column: 2 / 12;
    }
  }

  .footer-headline {
    font-size: clamp(3rem, 8vw, 8rem);
    color: var(--colors-ink-100);
    margin: 0 auto;
    text-align: center;
    max-width: 20ch;
  }

  .footer-actions {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    align-items: center;
    margin-bottom: 6rem;
  }

  @media (min-width: 768px) {
    .footer-actions {
      flex-direction: row;
      justify-content: center;
      gap: 4rem;
    }
  }

  .cta-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .footer-meta {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .copyright {
    font-family: var(--font-mono);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>