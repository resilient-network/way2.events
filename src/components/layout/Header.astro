---
const navLinks = [
  { href: '#organizers', label: 'Organizers' },
  { href: '#attendees', label: 'Attendees' },
]
---

<header>
  <nav class="nav" aria-label="Main navigation">
    <div class="nav-pill glass-panel" role="menubar">
      {navLinks.map(({ href, label }) => (
        <a
          href={href}
          class="nav-link"
          role="menuitem"
        >
          {label}
        </a>
      ))}
      <a
        href="https://docs.google.com/forms/d/e/1FAIpQLSduCM6cOmQd2xNFpeqKcyyYNI8efWHrgY4u1Rdln4XoYUSQsw/viewform?usp=header"
        class="nav-cta"
        role="menuitem"
        target="_blank"
        rel="noopener noreferrer"
      >
        Book a Demo
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    position: fixed;
    top: 24px;
    left: 24px;
    right: 24px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    z-index: 10000;
    pointer-events: none;
  }

  .nav {
    display: flex;
    justify-content: center;
    gap: 8px;
    pointer-events: auto;
    flex-wrap: wrap;
    max-width: 100vw;
  }

  .nav-pill {
    display: flex;
    padding: 4px;
    align-items: center;
    border-radius: 999px;
    gap: 2px;
    max-width: calc(100vw - 32px);
  }

  .nav-logo {
    display: flex;
    align-items: center;
    padding: 6px 12px;
    border-radius: 999px;
    text-decoration: none;
  }

  .nav-logo img {
    display: block;
    height: 16px;
    width: auto;
  }

  .nav-link {
    color: var(--colors-indigo-30);
    text-decoration: none;
    font-family: var(--font-sans);
    font-size: 14px;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 999px;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    opacity: 1;
    background: rgba(255, 255, 255, 0.1);
  }

  .nav-cta {
    color: var(--colors-ink-100);
    text-decoration: none;
    font-family: var(--font-sans);
    font-size: 13px;
    font-weight: 600;
    padding: 8px 16px;
    border-radius: 999px;
    background: var(--colors-indigo-40);
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .nav-cta:hover {
    background: var(--colors-indigo-30);
  }

  @media (max-width: 800px) {
    header {
      top: auto;
      bottom: 32px;
      left: 0;
      right: 0;
      justify-content: center;
    }
  }

  @media (max-width: 420px) {
    .nav-pill {
      padding: 2px;
      gap: 1px;
      max-width: calc(100vw - 24px);
    }

    .nav-logo img {
      height: 14px;
    }

    .nav-link {
      font-size: 12px;
      padding: 6px 10px;
    }

    .nav-cta {
      font-size: 11px;
      padding: 6px 10px;
    }
  }

</style>
