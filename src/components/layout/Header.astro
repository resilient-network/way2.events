---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/attendees', label: 'Attendees' },
  { href: '/partner-up', label: 'Organizers' },
]

const normalizePath = (path: string) => {
  const trimmed = path.replace(/\/+$/, '')
  return trimmed === '' ? '/' : trimmed
}

const currentPath = normalizePath(Astro.url.pathname)
---

<header>
  <nav class="nav">
    <div class="nav-pill glass-panel" role="menubar">
      {navLinks.map(({ href, label }) => (
        <a
          href={href}
          class={`nav-link${normalizePath(href) === currentPath ? ' is-active' : ''}`}
          role="menuitem"
        >
          {label}
        </a>
      ))}
    </div>
  </nav>
</header>
<style>
  header {
    position: fixed;
    top: 24px;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    pointer-events: none;
  }

  .nav {
    display: flex;
    justify-content: center;
    gap: 8px;
    pointer-events: auto;
    flex-wrap: wrap;
    max-width: 100vw;
  }

  .nav-pill {
    display: flex;
    padding: 4px;
    justify-content: center;
    align-items: center;
    border-radius: 999px;
    gap: 4px;
    flex-wrap: wrap;
    max-width: calc(100vw - 32px);

    .nav-link {
      color: var(--colors-ink-100);
      text-decoration: none;
      font-family: var(--font-sans);
      font-size: 14px;
      font-weight: 500;
      padding: 8px 16px;
      border-radius: 999px;
      transition: all 0.2s ease;
      opacity: 0.8;
    
      &:hover {
        opacity: 1;
        background: rgba(255, 255, 255, 0.1);
      }

      &.is-active {
        background: var(--colors-indigo-40);
        color: var(--colors-ink-100);
        opacity: 1;
      }
    }
  }

  .beta-cta {
    display: flex;
    padding: 0 16px;
    justify-content: center;
    align-items: center;
    border-radius: 999px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    color: var(--colors-ink-100);
    transition: all 0.2s ease;

    &:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  @media (max-width: 420px) {
    header {
      top: 12px;
    }

    .nav {
      gap: 6px;
    }

    .nav-pill {
      padding: 2px;
      max-width: calc(100vw - 24px);
    }

    .nav-pill .nav-link {
      font-size: 12px;
      padding: 6px 10px;
    }

    .beta-cta {
      padding: 0 10px;
      font-size: 12px;
    }
  }

</style>
