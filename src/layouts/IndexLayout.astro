---
import '@/styles/global.css'
import BaseHead from '@/components/layout/BaseHead.astro'
import Header from '@/components/layout/Header.astro'
import Footer from '@/components/layout/Footer.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import GradientMask from '@/components/ui/GradientMask.astro'
import { themeConfig } from '@/config'

const { title, description } = Astro.props
---

<BaseLayout title={title} description={description} type="page">
  <BaseHead title={title} description={description} slot="head" />
    <GradientMask />
    <Header />
    <slot />
    {
      themeConfig.general.footer && (
        <Footer />
      )
    }
</BaseLayout>

<script>
  import { initShader } from '@/scripts/background-shader';

  function boot() {
    document.querySelectorAll<HTMLCanvasElement>('.background-shader').forEach((c) => {
      if (!c.dataset.shaderInit) {
        c.dataset.shaderInit = '1';
        initShader(c);
      }
    });
  }

  boot();
  document.addEventListener('astro:page-load', boot);
</script>

<style is:global>
  .page-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .page-content main {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 72px;
  }
</style>
