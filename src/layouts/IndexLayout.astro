---
import '@/styles/global.css'
import BaseHead from '@/components/layout/BaseHead.astro'
import Header from '@/components/layout/Header.astro'
import Footer from '@/components/layout/Footer.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import GradientMask from '@/components/ui/GradientMask.astro'
import { themeConfig } from '@/config'

const { title, description } = Astro.props
---

<BaseLayout title={title} description={description} type="page">
  <BaseHead title={title} description={description} slot="head" />
    <GradientMask />
    <Header />
    <div class="page-container">
      <slot />
    </div>
    {
      themeConfig.general.footer && (
        <Footer />
      )
    }
</BaseLayout>

<script>
  import { initShader } from '@/scripts/background-shader';

  function boot() {
    const init = () => {
      document.querySelectorAll<HTMLCanvasElement>('.background-shader').forEach((c) => {
        if (!c.dataset.shaderInit) {
          c.dataset.shaderInit = '1';
          initShader(c);
        }
      });
    };
    // Defer shader init to avoid blocking main thread during load
    if ('requestIdleCallback' in window) {
      (window as any).requestIdleCallback(init);
    } else {
      setTimeout(init, 100);
    }
  }

  boot();
  document.addEventListener('astro:page-load', boot);
</script>

<style is:global>
  .page-container {
    width: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
</style>
